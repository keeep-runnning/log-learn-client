{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "module": "ES6",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
